{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}